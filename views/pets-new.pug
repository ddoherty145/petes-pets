extends layout

block content
  .container
    h1 Add a New Pet
    form#new-pet(action='/pets', method='POST', enctype='multipart/form-data')
      .form-group
        label Name*
        input.form-control(name='name', required)
      .form-group
        label Birthday*
        input.form-control(name='birthday', type='date', required)
      .form-group
        label Species*
        input.form-control(name='species', required)
      .form-group
        label Avatar Image* (JPEG/PNG, max 5MB)
        input.form-control(name='avatar', type='file', accept='image/jpeg,image/png', required)
        small.form-text.text-muted Upload a pet photo (JPEG or PNG format, maximum 5MB)
      .form-group
        label Favorite Food*
        input.form-control(name='favoriteFood', required)
      .form-group
        label Description* (min 140 chars)
        textarea.form-control(name='description', required, minlength='140')
      button.btn.btn-primary(type='submit') Save Pet
    style.
      label::after { content: '*'; color: red; margin-left: 4px; }