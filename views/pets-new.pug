extends layout

block content
  .container
    h1 Add a New Pet
    form#new-pet(action='/pets', method='POST', enctype='multipart/form-data')
      .form-group
        label Name*
        input.form-control(name='name', required)
      .form-group
        label Birthday*
        input.form-control(name='birthday', type='date', required)
      .form-group
        label Species*
        input.form-control(name='species', required)
      .form-group
        label Rectangular Image*
        input.form-control(name='picUrl', type='file', accept='image/*', required)
        small.form-text.text-muted Upload a rectangular image (max 5MB)
      .form-group
        label Square Image*
        input.form-control(name='picUrlSq', type='file', accept='image/*', required)
        small.form-text.text-muted Upload a square image (max 5MB)
      .form-group
        label Favorite Food*
        input.form-control(name='favoriteFood', required)
      .form-group
        label Description* (minimum 140 characters)
        textarea.form-control(name='description', required, minlength='140')
      button.btn.btn-primary(type='submit') Save Pet
    style.
      label::after { content: '*'; color: red; margin-left: 4px; }